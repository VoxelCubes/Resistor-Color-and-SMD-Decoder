# Maintainer: Voxel <voxel.aur@gmail.com>
pkgname=Resistor Color and SMD Decoder
pkgver=1.0
pkgrel=1
pkgdesc="Qt GUI tool for through-hole resistors and SMD parts."
arch=("x86_64")
url="https://github.com/VoxelCubes/Resistor-Color-and-SMD-Decoder"
license=('GPL')
depends=("pyside6", "python>=3.6.0", "qt6-svg")
source=("${pkgname}-$pkgver.tar.gz::${url}/releases/download/${pkgver}/${pkgname}-$pkgver.tar.gz")
sha256sums=("81ec726f2e89824e9593bb828a6c7636dc9946acdaad0355f80783a05e487b43")


prepare() {
	cd "$pkgname-$pkgver"
	patch -p1 -i "$srcdir/$pkgname-$pkgver.patch"
}

build() {
	cd "$pkgname-$pkgver"
	./configure --prefix=/usr
	make
}

check() {
	cd "$pkgname-$pkgver"
	make -k check
}

package() {
	cd "$pkgname-$pkgver"
	make DESTDIR="$pkgdir/" install
}
